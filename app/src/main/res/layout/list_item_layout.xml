<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <TextView
        android:id="@+id/hotel_name_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="name"/>
    <TextView
        android:id="@+id/hotel_address_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_name_label"
        android:text="address"/>
    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/hotel_name_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="XYZ hotel name"
        android:text=""/>
    <TextView
        android:id="@+id/hotel_address"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/hotel_address_label"
        app:layout_constraintTop_toTopOf="@id/hotel_address_label"
        tools:text="Abc hotel address"
        android:text=""/>

</androidx.constraintlayout.widget.ConstraintLayout>